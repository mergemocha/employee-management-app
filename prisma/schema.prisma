generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  isSuperuser Boolean?
  username    String    @unique
  password    String
  sessions    Session[] @relation("session")
  permissions String[]
}

model Session {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  token   String
  expires Int
  userId  String @db.ObjectId
  User    User   @relation("session", fields: [userId], references: [id])
}

// TODO: Employee model (this is just a stub for development)
model Employee {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
}
