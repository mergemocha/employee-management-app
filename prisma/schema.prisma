generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  isSuperuser Boolean?
  username    String    @unique
  password    String
  sessions    Session[]
  permissions String[]
}

model Session {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  token  String
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

model Employee {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String
  lastName   String
  title      String
  department String
  salary     Int
  secLevel   Int
  permanent  Boolean
  projects   String[]
}
