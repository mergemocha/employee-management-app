{
  "name": "employee-management-app-backend",
  "version": "1.0.0",
  "description": "Organisation-level boilerplate for TypeScript projects",
  "main": "lib/index.js",
  "scripts": {
    "start": "ts-node-dev src/index.ts --files",
    "build": "tsc",
    "db:init": "ts-node scripts/init-mongo-replicaset.ts",
    "prisma:gen": "prisma generate",
    "prisma:up": "prisma db push",
    "key:gen": "openssl rand -base64 756 > ./docker-entrypoint-initdb.d/prod.key",
    "test": "jest --passWithNoTests",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --config jest.coverage.js",
    "test:coverage:watch": "npm run test:coverage -- --watchAll",
    "lint": "eslint . --ext .ts",
    "doc": "typedoc --out docs src",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mergemocha/employee-management-app-backend.git"
  },
  "author": "Linus Willner, Anna Smati, Panu Eronen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mergemocha/employee-management-app-backend/issues"
  },
  "homepage": "https://github.com/mergemocha/employee-management-app-backend#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "execa": "~5.1.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "mongo-url-parser": "^1.0.1",
    "prisma": "^3.10.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "ts-node-dev": "^1.1.8",
    "typedoc": "^0.22.12",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.ts": "eslint . --cache --fix --ext .ts",
    "*.prisma": "prisma format"
  },
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "@types/dotenv-safe": "^8.1.2",
    "bcrypt": "^5.0.1",
    "dotenv-safe": "^8.2.0",
    "fastify": "^3.27.2",
    "fastify-auth": "^1.1.0",
    "fastify-cors": "^6.0.3",
    "fastify-helmet": "^7.0.1",
    "jsonwebtoken": "^8.5.1",
    "pino": "^7.8.0",
    "pino-pretty": "^7.5.1"
  }
}
